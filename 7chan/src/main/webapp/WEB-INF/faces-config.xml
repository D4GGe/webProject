<?xml version='1.0' encoding='UTF-8'?>

<faces-config version="2.1"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

<!-- Main router -->
 <navigation-rule>
    <from-view-id>*</from-view-id>
    <navigation-case>
        <from-outcome>newPost</from-outcome>
        <to-view-id>partials/newPost.xhtml</to-view-id>
    </navigation-case>
     <navigation-case>
        <from-outcome>friends</from-outcome>
        <to-view-id>partials/friends.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
        <from-outcome>messages</from-outcome>
        <to-view-id>partials/messages.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
        <from-outcome>user</from-outcome>
        <to-view-id>partials/user.xhtml</to-view-id>
    </navigation-case>
     <navigation-case>
        <from-outcome>legacy</from-outcome>
        <to-view-id>partials/oldposts.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
        <from-outcome>postSearch</from-outcome>
        <to-view-id>partials/postSearch.xhtml</to-view-id>
    </navigation-case>
     <navigation-case>
        <from-outcome>about</from-outcome>
        <to-view-id>partials/about.xhtml</to-view-id>
    </navigation-case>  
    <navigation-case>
        <from-outcome>postStream</from-outcome>
        <to-view-id>partials/postStream.xhtml</to-view-id>
    </navigation-case>  
    <navigation-case>
        <from-outcome>editProfile</from-outcome>
        <to-view-id>partials/editProfile.xhtml</to-view-id>
    </navigation-case> 
    <navigation-case>
        <from-outcome>main</from-outcome>
        <to-view-id>partials/main.xhtml</to-view-id>
    </navigation-case>
</navigation-rule>       
    
</faces-config>
